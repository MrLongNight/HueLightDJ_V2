@page "/bridge-add/{Id:guid}"
@using HueApi.BridgeLocator;
@inject StorageService LocalStorageService
@inject NavigationManager NavManager
@inject IHueSetupService HueSetupService

<MudText Typo="Typo.h3">Add bridge to @config?.Name</MudText>

@foreach (var bridge in bridges)
{
    <MudCard>
        <MudCardContent>
            <MudText>@bridge.IpAddress</MudText>
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Text" Color="Color.Primary" OnClick="(() => Select(bridge.IpAddress))">Select</MudButton>
        </MudCardActions>
    </MudCard>
}

<MudTextField @bind-Value="ipAdd" Variant="Variant.Text"></MudTextField>
<MudButton Variant="Variant.Text" Color="Color.Primary" OnClick="Save">Add (click the bridge button first!)</MudButton>


